<asp:Content ID="Content1" ContentPlaceHolderID="MainContent" runat="server">
    <asp:Panel ID="Panel1" runat="server">
        <form id="form1" >
        <fieldset style="height: 361px; width: 847px;">
            <legend>Department details</legend>Department ID:<br />
&nbsp;<asp:TextBox ID="TextDepartmentId" runat="server" Width="400px" Height="40px"></asp:TextBox>
